generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum TransactionType {
  Income
  Expense
}

enum PaymentMethod {
  Cash
  CreditCard
  Transfer
}

enum DurationUnit {
  Day
  Week
  Month
  Year
}

model Users {
  id                String                @id @default(uuid())
  email             String                @unique
  password          String
}

model Members {
  id                String                @id @default(uuid())
  name              String
  email             String                @unique
  phone             String
  dob               DateTime              @default(now())
  address           String?
  profilePhoto      String?
  joinDate          DateTime              @default(now())
  expirationDate    DateTime              @default(now())

  planId   Int
  plans      Plans      @relation(fields: [planId], references: [id])

  transactions      Transactions[]
  attendance        Attendance[]
}

model Plans {
  id             Int              @id @default(autoincrement())
  name           String
  price          Decimal          
  durationValue  Int
  durationUnit   DurationUnit

  members        Members[]
}

model Transactions {
  id               String                @id @default(uuid())
  memberId         String?
  categoryId       Int
  category         Categories?           @relation(fields: [categoryId], references: [id])
  member           Members?              @relation(fields: [memberId], references: [id])

  description      String
  type             TransactionType
  amount           Decimal               
  paymentMethod    PaymentMethod
  transactionDate  DateTime              @default(now())
}

model Attendance {
  id            String                @id @default(uuid())
  memberId      String
  member        Members               @relation(fields: [memberId], references: [id])

  checkInTime   DateTime              @default(now())
  checkOutTime  DateTime?
}

model Categories {
  id               Int               @id @default(autoincrement())
  name             String
  description      String

  transactions Transactions[]
}