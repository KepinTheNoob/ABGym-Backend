generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  Income
  Expense
}

enum PaymentMethod {
  Cash
  CreditCard
  Transfer
}

enum DurationUnit {
  Day
  Week
  Month
  Year
}

model Users {
  id                String                @id @default(uuid())
  email             String                @unique
  password          String
}

model Members {
  id                String                   @id @default(uuid())
  name              String
  email             String                @unique
  phone             String
  dob               DateTime
  address           String?
  profilePhoto      String?
  joinDate          DateTime
  expirationDate    DateTime

  planId   Int
  plans      Plans      @relation(fields: [planId], references: [id])

  transactions      Transactions[]
  attendance        Attendance[]
}

model Plans {
  id             Int       @id @default(autoincrement())
  name           String
  price          Decimal    @db.Decimal(10, 2)
  durationValue  Int
  durationUnit   DurationUnit

  members        Members[]
}

model Transactions {
  id               String               @id @default(uuid())
  memberId         String?
  categoryId       Int
  category         Categories?        @relation(fields: [categoryId], references: [id])
  member           Members?          @relation(fields: [memberId], references: [id])

  description      String
  type             TransactionType
  amount           Decimal           @db.Decimal(10, 2)
  paymentMethod    PaymentMethod
  transactionDate  DateTime
}

model Attendance {
  id            String       @id @default(uuid())
  memberId      String
  member        Members   @relation(fields: [memberId], references: [id])

  checkInTime   DateTime
  checkOutTime  DateTime?
}

model Categories {
  id               Int               @id @default(autoincrement())
  name             String
  description      String

  transactions Transactions[]
}